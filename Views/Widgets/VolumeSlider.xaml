<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicEco.Views.Widgets.VolumeSlider">
    <Grid BackgroundColor="Red"
          Rotation="{OnPlatform WinUI='0', Android='180'}">
        <AbsoluteLayout x:Name="HolderLayout"
                        HorizontalOptions="Fill"
                        VerticalOptions="Fill">
            <Label x:Name="UnderLabel"
                   BackgroundColor="{StaticResource ProgressUnderColor}"
                   AbsoluteLayout.LayoutBounds="0, 0, 5, AutoSize"/>
            <Label x:Name="OverLabel"
                   BackgroundColor="{StaticResource ProgressOverColor}"
                   AbsoluteLayout.LayoutBounds="0, 0, 0, 0"/>
            <Grid x:Name="Icon"
                  ColumnDefinitions="*"
                  RowDefinitions="*"
                  AbsoluteLayout.LayoutBounds="0, 0, 0, 0"
                  BackgroundColor="Transparent">
                <Image Source="progress_icon.png"
                       BackgroundColor="Transparent"
                       HorizontalOptions="Fill"
                       VerticalOptions="Fill">
                    <Image.GestureRecognizers>
                        <PanGestureRecognizer PanUpdated="Icon_PanUpdated"/>
                    </Image.GestureRecognizers>
                </Image>
            </Grid>
        </AbsoluteLayout>
    </Grid>
</ContentView>
