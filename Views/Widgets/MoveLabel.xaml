<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicEco.Views.Widgets.MoveLabel">
    <Label x:Name="InnerLabel"
           Text="="
           MaxLines="1"
           HorizontalTextAlignment="Center"
           VerticalTextAlignment="Center"
           HorizontalOptions="Fill"
           VerticalOptions="Fill"
           BackgroundColor="Transparent"
           FontSize="Medium"
           TextColor="{StaticResource SlotText}">
        <Label.GestureRecognizers>
            <!--DragGestureRecognizer DragStarting="OnDragStart"
                                   CanDrag="True"/>
            <DropGestureRecognizer Drop="OnDrop"
                                   DragOver="OnDragOver"
                                   AllowDrop="True"/!-->
            <!--Conflict with PanGesture-->

            <PointerGestureRecognizer x:Name="Test" PointerPressed="OnPressed"/>
            <PanGestureRecognizer PanUpdated="OnPanUpdated"/>
        </Label.GestureRecognizers>
    </Label>
</ContentView>
