<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MusicEco.Views.Widgets"
             x:Class="MusicEco.Views.Widgets.ConfirmButton">
    <StackLayout Orientation="Horizontal">
        <local:LabelButton x:Name="ConfirmInner"
                           Text="V"
                           TextAlign="Center"
                           Entered="ConfirmButton_Entered"
                           Exited="ConfirmButton_Exited"
                           Clicked="ConfirmButton_Clicked"
                           BackgroundColor="{StaticResource SlotBackground}"
                           HorizontalOptions="FillAndExpand"/>
        <local:LabelButton x:Name="CancelInner"
                           Text="X"
                           TextAlign="Center"
                           Entered="CancelButton_Entered"
                           Exited="CancelButton_Exited"
                           Clicked="CancelButton_Clicked"
                           BackgroundColor="{StaticResource SlotBackground}"
                           HorizontalOptions="FillAndExpand"/>
    </StackLayout>
</ContentView>
