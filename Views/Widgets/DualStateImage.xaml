<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicEco.Views.Widgets.DualStateImage">
    <Image x:Name="InnerImage">
        <Image.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnClicked"/>
            <PointerGestureRecognizer PointerPressed="OnPressed"
                                      PointerReleased="OnReleased"
                                      PointerEntered="OnEntered"
                                      PointerExited="OnExited"/>
        </Image.GestureRecognizers>
    </Image>
</ContentView>
