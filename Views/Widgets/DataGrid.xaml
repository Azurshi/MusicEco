<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:w="clr-namespace:MusicEco.Views.Widgets"
             x:Class="MusicEco.Views.Widgets.DataGrid">
    <Grid ColumnDefinitions="*"
          RowDefinitions="*">
        <ScrollView x:Name="ScrollWrapper" 
                    VerticalScrollBarVisibility="Always"
                    Scrolled="ScrollWrapper_Scrolled">
            <!--" Fix bug when CollectionView not trigger Scrolled!-->
            <CollectionView x:Name="CollectionContainer"
                            Grid.Column="0"
                            Grid.Row="0"
                            VerticalScrollBarVisibility="Never"
                            BackgroundColor="{StaticResource ListBackground}">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout x:Name="ItemLayout"
                                     Orientation="Vertical"
                                     VerticalItemSpacing="2"
                                     HorizontalItemSpacing="2"/>
                </CollectionView.ItemsLayout>
            </CollectionView>
        </ScrollView>
    </Grid>
</ContentView>
