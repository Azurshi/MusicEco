<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicEco.Views.Widgets.DataList">
    <Grid ColumnDefinitions="*"
          RowDefinitions="*">
        <ScrollView x:Name="ScrollWrapper" 
                    VerticalScrollBarVisibility="Always"
                    Scrolled="ScrollWrapper_Scrolled">
            <!--Fix error when CollectionView not trigger Scrolled!-->
            <CollectionView x:Name="CollectionContainer"
                            Grid.Column="0"
                            Grid.Row="0"
                            VerticalScrollBarVisibility="Never"
                            BackgroundColor="{StaticResource ListBackground}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout x:Name="ItemLayout"
                                       Orientation="Vertical"
                                       ItemSpacing="1"/>
                </CollectionView.ItemsLayout>
            </CollectionView>
        </ScrollView>
        <AbsoluteLayout x:Name="Overlay"
                        Grid.Column="0"
                        Grid.Row="0"
                        InputTransparent="True">
        </AbsoluteLayout>
    </Grid>
</ContentView>
