<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:w="clr-namespace:MusicEco.Views.Widgets"
             x:Class="MusicEco.Views.Components.AppOverlay">
    <AbsoluteLayout x:Name="HolderLayout"
                    HorizontalOptions="Fill"
                    VerticalOptions="Fill"
                    SizeChanged="AppOverlaySizeChanged">
        <AbsoluteLayout.GestureRecognizers>
            <TapGestureRecognizer Tapped="HolderLayoutTapped"/>
        </AbsoluteLayout.GestureRecognizers>
        <AbsoluteLayout x:Name="BackgroundPanel"                    
                        HorizontalOptions="Fill"
                        VerticalOptions="Fill"
                        BackgroundColor="Silver"
                        Opacity="0.5"
                        WidthRequest="1280"
                        HeightRequest="720"/>
        <Border x:Name="OptionMenu"
                StrokeThickness="2"
                SizeChanged="Border_SizeChanged">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="8"/>
            </Border.StrokeShape>
            <VerticalStackLayout x:Name="OptionMenuHolder">
                
            </VerticalStackLayout>
        </Border>
        <w:VolumeSlider x:Name="VolumeSlider"
                        AbsoluteLayout.LayoutBounds="{OnPlatform Android='50, -200, 10, 200', WinUI='100 , -15, 200, 10'}"
                        BackgroundColor="Blue"/>
        <Grid x:Name="FormContainer"
              ColumnDefinitions="*"
              RowDefinitions="*"
              Margin="{OnPlatform WinUI='150, 25', Android='10, 25'}">
        </Grid>
        <Button x:Name="HideButton"
                Text="X"
                AbsoluteLayout.LayoutBounds="50, 50, 50, 50"
                Clicked="HideButton_Clicked"/>
    </AbsoluteLayout>
</ContentView>
