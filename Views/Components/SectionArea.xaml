<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:section="clr-namespace:MusicEco.Views.Sections"
             x:Class="MusicEco.Views.Components.SectionArea">
    <Grid x:Name="Container"
          ColumnDefinitions="{OnPlatform WinUI='*, *', Android='*'}"
          RowDefinitions="*"
          BackgroundColor="{StaticResource BCBright}">
        <section:PlayingSection x:Name="Playing"
                                Grid.ColumnSpan="2"/>
        <section:AlbumSection x:Name="Album"
                              IsVisible="True"/>
        <section:QueueSection x:Name="Queue"
                              IsVisible="False"/>
        <section:PlaylistSection x:Name="Playlist"
                                IsVisible="False"/>
        <section:SettingSection x:Name="Setting"
                                IsVisible="False"/>
        <section:ExplorerSection x:Name="Explorer"
                               IsVisible="False"/>
        <section:SearchSection x:Name="Search"
                               IsVisible="False"/>
        <section:UserSection x:Name="User"
                             IsVisible="False"/>
    </Grid>
</ContentView>
