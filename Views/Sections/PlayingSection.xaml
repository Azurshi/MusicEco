<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MusicEco.ViewModels.Sections"
             x:Class="MusicEco.Views.Sections.PlayingSection">
    <ContentView.BindingContext>
        <vm:PlayingSection/>
    </ContentView.BindingContext>
    <Grid ColumnDefinitions="*, 0"
          RowDefinitions="*">
        <Grid x:Name="Overview"
              Grid.Row="0"
              Grid.Column="0"
              ColumnDefinitions="*"
              RowDefinitions="9*, 1, *">
            <Image x:Name="Image"
                   Grid.Row="0"
                   Aspect="AspectFit"
                   BackgroundColor="{StaticResource BCDark}"
                   Source="{Binding Image}">
            </Image>
            <BoxView Grid.Row="1"
                     BackgroundColor="{StaticResource BorderColor}"/>
            <Label x:Name="Title"
                   Text="{Binding Title}"
                   Grid.Row="2"
                   VerticalOptions="Fill"
                   HorizontalOptions="Fill"
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center"
                   LineBreakMode="TailTruncation"
                   BackgroundColor="{StaticResource BCBlack}"
                   MaxLines="1">
            </Label>
        </Grid>
        <!--ex:ExtensionOverlay x:Name="Extension"
                             Grid.Row="0"
                             Grid.Column="0"/!-->
    </Grid>
</ContentView>
