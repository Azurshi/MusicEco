<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicEco.Settings.LightPallete">
    <Color x:Key="ButtonBackground">#252525</Color>
    <Color x:Key="ButtonHighlight">#ADD8E6</Color>
    <Color x:Key="ButtonBorder">#CCCCCC</Color>
    <Color x:Key="ButtonText">#FFFFFF</Color>

    <Color x:Key="ItemBackground">#303030</Color>
    <Color x:Key="ItemHighlight">#9DC8D6</Color>
    <Color x:Key="ItemBorder">#DDDDDD</Color>
    <Color x:Key="ItemText">#F0F0F0</Color>

    <Color x:Key="OptionBackground">#303030</Color>
    <Color x:Key="OptionHighlight">#9DC8D6</Color>
    <Color x:Key="OptionBorder">#EEEEEE</Color>
    <Color x:Key="OptionText">#CCCCCC</Color>

    <Color x:Key="ContainerBackground">#555555</Color>
    <Color x:Key="ContainerBorder">#FFFFFF</Color>

    <Color x:Key="ProgressColor">#333333</Color>
    <Color x:Key="PlaceholderText">#BBBBBB</Color>
    <Color x:Key="SeparatorBorder">#CCCCCC</Color>
    <Color x:Key="InputBacground">#404040</Color>
    <Color x:Key="ErrorBackground">#FF4C4C</Color>
    <Color x:Key="ErrorText">#FFFFFF</Color>
</ResourceDictionary>