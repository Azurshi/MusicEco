<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             WidthRequest="{DynamicResource OptionWidth}"
             x:Class="MusicEco.Views.Components.OptionMenu">
    <Border Stroke="{DynamicResource OptionBorder}">
        <Border.StrokeShape>
            <RoundRectangle StrokeThickness="{DynamicResource BorderSize}"
                            CornerRadius="{DynamicResource BorderRadius}"/>
        </Border.StrokeShape>
        <ContentPresenter x:Name="MainContentPresenter"/>
    </Border>
</ContentView>
