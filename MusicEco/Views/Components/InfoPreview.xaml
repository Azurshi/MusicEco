<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="clr-namespace:MusicEco.Views.Decorators"
             xmlns:vm="clr-namespace:MusicEco.ViewModels.Components"
             x:Class="MusicEco.Views.Components.InfoPreview"
             BackgroundColor="{DynamicResource ContainerBackground}">
    <Grid RowDefinitions="7*, Auto, *"
          ColumnDefinitions="*">
        <Image Grid.Row="0" Grid.Column="0"
               Source="{Binding Image}"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="FillAndExpand"/>
        <Label Grid.Row="2" Grid.Column="0"
               Text="{Binding Title}"
               FontSize="{DynamicResource TitleFontSize}"
               VerticalTextAlignment="Center"
               HorizontalTextAlignment="Center"
               HeightRequest="{DynamicResource ItemSize}"/>
    </Grid>
</ContentView>
